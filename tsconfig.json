{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
